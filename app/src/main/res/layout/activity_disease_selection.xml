<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_disease_selection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.laterain.inobugs2.activity.DiseaseSelectionActivity">

    <TextView
        android:id="@+id/text_view_disease_selection_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Material"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"/>

    <Spinner
        android:id="@+id/spinner_disease_selection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_view_disease_selection_label"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:spinnerMode="dialog"/>

    <EditText
        android:id="@+id/edit_text_disease_selection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/text_view_disease_selection_label"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:ems="10"
        android:inputType="textMultiLine">

        <requestFocus/>
    </EditText>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floating_action_button_disease_selection_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/fab_margin"
        android:layout_marginEnd="@dimen/fab_margin"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@mipmap/ic_keyboard_arrow_right_white_24dp"/>

</RelativeLayout>
