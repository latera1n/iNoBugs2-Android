<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_view_fragment_all_records"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        android:adjustViewBounds="false"
        app:srcCompat="@color/colorPrimary"/>

    <TextView
        android:id="@+id/text_view_fragment_all_records_title_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/image_view_fragment_all_records"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@+id/image_view_fragment_all_records"
        android:text="Bugs"
        android:textAppearance="@android:style/TextAppearance.Material"/>

    <TextView
        android:id="@+id/text_view_fragment_all_records_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_view_fragment_all_records"
        android:layout_alignEnd="@+id/text_view_fragment_all_records_title_label"
        android:layout_toEndOf="@+id/image_view_fragment_all_records"
        android:text="Sample Text"
        android:textAppearance="@android:style/TextAppearance.Material.Caption"/>
</RelativeLayout>
