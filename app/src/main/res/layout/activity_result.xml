<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floating_action_button_result_bug_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/fab_margin"
        android:layout_marginEnd="@dimen/fab_margin"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@mipmap/ic_keyboard_arrow_right_white_24dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="30dp" >

            <TextView
                android:id="@+id/text_view_result_bug_basic_info_title_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="基本信息"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"
                android:layout_marginStart="20dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/text_view_result_bug_basic_info_type_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:text="类型"
                android:textAppearance="@android:style/TextAppearance.Material.Caption"
                />

            <TextView
                android:id="@+id/text_view_result_bug_basic_info_type_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="@string/result_bug_text_view_default_text"
                android:textAppearance="@android:style/TextAppearance.Material" />

            <TextView
                android:id="@+id/text_view_result_bug_basic_info_date_and_location_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="@string/result_bug_basic_info_date_and_location_label"
                android:layout_marginTop="5dp"
                android:textAppearance="@android:style/TextAppearance.Material.Caption"
                />

            <TextView
                android:id="@+id/text_view_result_bug_basic_info_date_and_location_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="@string/result_bug_text_view_default_text"
                android:textAppearance="@android:style/TextAppearance.Material" />

            <TextView
                android:id="@+id/text_view_result_bug_basic_info_method_and_mode_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="@string/result_bug_basic_info_method_and_mode_label"
                android:layout_marginTop="5dp"
                android:textAppearance="@android:style/TextAppearance.Material.Caption"/>

            <TextView
                android:id="@+id/text_view_result_bug_basic_info_method_and_mode_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:textAppearance="@android:style/TextAppearance.Material"
                android:text="@string/result_bug_text_view_default_text"/>

            <TextView
                android:id="@+id/text_view_result_bug_bug_name_title_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/result_bug_bug_name_title_label"
                android:layout_marginBottom="0dp"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/text_view_result_bug_bug_name_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="@string/result_bug_text_view_default_text"
                android:textAppearance="@android:style/TextAppearance.Material"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/text_view_result_bug_egg_and_bug_sum_title_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:text="@string/result_bug_egg_and_bug_sum_title_label"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/text_view_result_bug_egg_and_bug_sum_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="30dp"
                android:text="@string/result_bug_text_view_default_number_value"
                android:textAppearance="@android:style/TextAppearance.Material" />

            <TextView
                android:id="@+id/text_view_result_bug_count_detail_title_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/result_bug_count_detail_title_label"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"
                android:layout_marginTop="20dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/text_view_result_bug_count_detail_age_1_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/result_bug_count_detail_age_1_label"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:textAppearance="@android:style/TextAppearance.Material.Caption"
                />

            <TextView
                android:id="@+id/text_view_result_bug_count_detail_age_1_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Material"
                android:text="@string/result_bug_text_view_default_number_value"
                android:layout_marginStart="30dp" />

            <TextView
                android:id="@+id/text_view_result_bug_count_detail_age_2_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/result_bug_count_detail_age_2_label"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:textAppearance="@android:style/TextAppearance.Material.Caption"
                />

            <TextView
                android:id="@+id/text_view_result_bug_count_detail_age_2_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Material"
                android:text="@string/result_bug_text_view_default_number_value"
                android:layout_marginStart="30dp" />

            <TextView
                android:id="@+id/text_view_result_bug_count_detail_age_3_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/result_bug_count_detail_age_3_label"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:textAppearance="@android:style/TextAppearance.Material.Caption"
                />

            <TextView
                android:id="@+id/text_view_result_bug_count_detail_age_3_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Material"
                android:text="@string/result_bug_text_view_default_number_value"
                android:layout_marginStart="30dp" />

            <TextView
                android:id="@+id/text_view_result_bug_count_detail_age_4_label"
