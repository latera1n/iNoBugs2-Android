                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Material"
                android:text="@string/result_bug_text_view_default_number_value"
                android:layout_marginStart="30dp" />

            <TextView
                android:id="@+id/text_view_result_bug_count_detail_age_5_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/result_bug_count_detail_age_5_label"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:textAppearance="@android:style/TextAppearance.Material.Caption"
                />

            <TextView
                android:id="@+id/text_view_result_bug_count_detail_age_5_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="@android:style/TextAppearance.Material"
                android:text="@string/result_bug_text_view_default_number_value"
                android:layout_marginStart="30dp" />

            <TextView
                android:id="@+id/text_view_result_bug_age_6_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/result_bug_count_detail_age_6_label"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:textAppearance="@android:style/TextAppearance.Material.Caption"
                />

            <TextView
                android:id="@+id/text_view_result_bug_count_detail_age_6_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Material"
                android:text="@string/result_bug_text_view_default_number_value"
                android:layout_marginStart="30dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/result_bug_count_detail_bug_count_total_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/result_bug_count_detail_bug_count_total_label"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="5dp"
                        android:textAppearance="@android:style/TextAppearance.Material.Caption"
                        />

                    <TextView
                        android:id="@+id/result_bug_count_detail_bug_count_total_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@android:style/TextAppearance.Material"
                        android:text="@string/result_bug_text_view_default_number_value"
                        android:layout_marginStart="30dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/result_bug_count_detail_egg_count_total_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/result_bug_count_detail_egg_count_total_label"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:textAppearance="@android:style/TextAppearance.Material.Caption"
                        />

                    <TextView
                        android:id="@+id/result_bug_count_detail_egg_count_total_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@android:style/TextAppearance.Material"
                        android:text="@string/result_bug_text_view_default_number_value"
                        android:layout_marginStart="20dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="30dp" >

                <TextView
                    android:id="@+id/text_view_result_bug_count_result_title_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/result_bug_count_result_title_label"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:textAppearance="@android:style/TextAppearance.Material.Medium"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/text_view_result_bug_count_result_total_area_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/result_bug_count_result_total_area_label"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="5dp"
                    android:textAppearance="@android:style/TextAppearance.Material.Caption"
                    />

                <TextView
                    android:id="@+id/text_view_result_bug_count_result_total_area_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/result_bug_text_view_default_text"
                    android:layout_marginStart="30dp"
                    android:textAppearance="@android:style/TextAppearance.Material" />

                <TextView
                    android:id="@+id/text_view_result_bug_count_result_affected_area_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/result_bug_count_result_affected_area_label"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="5dp"
                    android:textAppearance="@android:style/TextAppearance.Material.Caption"
                    />

                <TextView
                    android:id="@+id/text_view_result_bug_count_result_affected_area_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/result_bug_text_view_default_text"
                    android:layout_marginStart="30dp"
                    android:textAppearance="@android:style/TextAppearance.Material" />

                <TextView
                    android:id="@+id/text_view_result_bug_count_result_total_crop_count_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/result_bug_count_result_total_crop_count_label"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="5dp"
                    android:textAppearance="@android:style/TextAppearance.Material.Caption"
                    />

                <TextView
                    android:id="@+id/text_view_result_bug_count_result_total_crop_count_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/result_bug_text_view_default_text"
                    android:layout_marginStart="30dp"
                    android:textAppearance="@android:style/TextAppearance.Material" />

                <TextView
                    android:id="@+id/text_view_result_bug_count_result_affected_bug_crop_count_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/result_bug_count_result_affected_bug_crop_count_label"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="5dp"
                    android:textAppearance="@android:style/TextAppearance.Material.Caption"
                    />

                <TextView
                    android:id="@+id/text_view_result_bug_count_result_affected_bug_crop_count_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/result_bug_text_view_default_text"
                    android:layout_marginStart="30dp"
                    android:textAppearance="@android:style/TextAppearance.Material" />

                <TextView
                    android:id="@+id/text_view_result_bug_count_result_affected_egg_crop_count_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/result_bug_count_result_affected_egg_crop_count_label"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="5dp"
                    android:textAppearance="@android:style/TextAppearance.Material.Caption"
                    />

                <TextView
                    android:id="@+id/text_view_result_bug_count_result_affected_egg_crop_count_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/result_bug_text_view_default_text"
                    android:layout_marginStart="30dp"
                    android:textAppearance="@android:style/TextAppearance.Material" />

                <TextView
                    android:id="@+id/text_view_result_bug_count_result_affected_area_percentage_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/result_bug_count_result_affected_area_percentage_label"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="5dp"
                    android:textAppearance="@android:style/TextAppearance.Material.Caption"
                    />

                <TextView
                    android:id="@+id/text_view_result_bug_count_result_affected_area_percentage_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/result_bug_text_view_default_text"
                    android:layout_marginStart="30dp"
                    android:textAppearance="@android:style/TextAppearance.Material" />

                <TextView
                    android:id="@+id/text_view_result_bug_count_result_affected_bug_crop_count_percentage_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/result_bug_count_result_affected_bug_crop_count_percentage_label"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="5dp"
                    android:textAppearance="@android:style/TextAppearance.Material.Caption"
                    />

                <TextView
                    android:id="@+id/text_view_result_bug_count_result_affected_bug_crop_count_percentage_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/result_bug_text_view_default_text"
                    android:layout_marginStart="30dp"
                    android:textAppearance="@android:style/TextAppearance.Material" />

                <TextView
                    android:id="@+id/text_view_result_bug_count_result_affected_egg_crop_count_percentage_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/result_bug_count_result_affected_egg_crop_count_percentage_label"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="5dp"
