                    />

                <TextView
                    android:id="@+id/text_view_result_bug_count_result_affected_egg_crop_count_percentage_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/result_bug_text_view_default_text"
                    android:layout_marginStart="30dp"
                    android:textAppearance="@android:style/TextAppearance.Material" />

                <TextView
                    android:id="@+id/text_view_result_bug_note_title_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/result_bug_note_title_label"
                    android:textAppearance="@android:style/TextAppearance.Material.Medium"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/text_view_result_bug_note_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:text="@string/result_bug_text_view_default_text"
                    android:layout_marginTop="5dp"
                    android:textAppearance="@android:style/TextAppearance.Material" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>

